{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node", // Added for module resolution
    "allowSyntheticDefaultImports": true, // Enable synthetic default imports
    "resolveJsonModule": true // Allow importing JSON files
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}